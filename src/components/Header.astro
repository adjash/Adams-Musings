---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <!-- Skip link -->
  <a href="#main" class="skip-link">Skip to main content</a>

  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink
        href="https://adamhardie.com/"
        target="_blank"
        rel="noopener noreferrer">About</HeaderLink
      >
    </div>
  </nav>
</header>
<style>
  header {
    margin-bottom: 1rem;
    padding: 0 1em;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    display: flex;
    justify-content: center;
  }

  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }

  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  .skip-link {
    position: absolute;
    top: auto;
    left: -9999px;
    width: 1px;
    height: 1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    white-space: nowrap;
    background: #ffbf47;
    color: #0b0c0c;
    padding: 0.5em 1em;
    font-weight: bold;
    text-decoration: none;
    z-index: 100;
  }

  .skip-link:focus {
    position: static;
    width: auto;
    height: auto;
    overflow: visible;
    clip: auto;
    clip-path: none;
    white-space: normal;
    margin: 0.5em;
    display: inline-block;
  }

  @media screen and (max-width: 500px) {
    nav {
      flex-direction: column;
      padding-top: 1rem;
    }
  }
</style>
